<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme - Flipkart Style -->
    <style name="Base.Theme.Natraj" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary Colors - Flipkart Blue -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/text_on_primary</item>

        <!-- Secondary/Accent Colors - Flipkart Orange -->
        <item name="colorSecondary">@color/accent_orange</item>
        <item name="colorSecondaryVariant">@color/buy_now_orange</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Background Colors -->
        <item name="android:colorBackground">@color/background_light</item>
        <item name="colorSurface">@color/background_card</item>
        <item name="colorOnSurface">@color/text_primary</item>

        <!-- Error Colors -->
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/white</item>

        <!-- Status Bar - Flipkart Blue -->
        <item name="android:statusBarColor">@color/primary_dark</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Navigation Bar -->
        <item name="android:navigationBarColor">@color/white</item>

        <!-- Text Colors -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:textColorHint">@color/text_hint</item>
    </style>

    <style name="Theme.Natraj" parent="Base.Theme.Natraj" />

    <!-- Flipkart Button Styles -->
    <style name="FlipkartButton" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/primary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">2dp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="FlipkartButtonOrange" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/accent_orange</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">2dp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <!-- Card Style - Flipkart flat design -->
    <style name="FlipkartCard" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">0dp</item>
        <item name="cardElevation">0dp</item>
        <item name="cardBackgroundColor">@color/white</item>
    </style>

    <!-- Custom Tab Text Style -->
    <style name="CustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>