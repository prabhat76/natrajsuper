<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme - Flipkart Style -->
    <style name="Base.Theme.Natraj" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary Colors - Flipkart Blue -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/text_on_primary</item>

        <!-- Secondary/Accent Colors - Blue -->
        <item name="colorSecondary">@color/accent_orange</item>
        <item name="colorSecondaryVariant">@color/buy_now_orange</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Background Colors -->
        <item name="android:colorBackground">@color/background_light</item>
        <item name="colorSurface">@color/background_card</item>
        <item name="colorOnSurface">@color/text_primary</item>

        <!-- Error Colors -->
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/white</item>

        <!-- Status Bar - Flipkart Blue -->
        <item name="android:statusBarColor">@color/primary_dark</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Navigation Bar -->
        <item name="android:navigationBarColor">@color/white</item>

        <!-- Text Colors -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:textColorHint">@color/text_hint</item>

        <!-- Global rounded buttons -->
        <item name="buttonStyle">@style/Widget.Natraj.AppButton</item>
        <item name="materialButtonStyle">@style/Widget.Natraj.MaterialButton</item>
        <!-- Shape tokens for Material components -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.Natraj.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.Natraj.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.Natraj.LargeComponent</item>
    </style>

    <style name="Theme.Natraj" parent="Base.Theme.Natraj" />
    
    <style name="Theme.Natraj.NoActionBar" parent="Theme.Natraj">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <!-- Flipkart Button Styles -->
    <style name="FlipkartButton" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/primary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">24dp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="FlipkartButtonOrange" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/accent_orange</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">24dp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <!-- Card Style - Flipkart flat design -->
    <style name="FlipkartCard" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">0dp</item>
        <item name="cardElevation">0dp</item>
        <item name="cardBackgroundColor">@color/white</item>
    </style>

    <!-- Custom Tab Text Style -->
    <style name="CustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Success Button -->
    <style name="SuccessButton" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/success_green</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">24dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="elevation">4dp</item>
    </style>

    <!-- Error Button -->
    <style name="ErrorButton" parent="Widget.Material3.Button.OutlinedButton">
        <item name="strokeColor">@color/error_red</item>
        <item name="android:textColor">@color/error_red</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">24dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="strokeWidth">2dp</item>
    </style>

    <!-- Warning Button -->
    <style name="WarningButton" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/warning_orange</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">24dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Modern Card with Shadow -->
    <style name="ModernCard" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">@color/white</item>
        <item name="contentPadding">16dp</item>
    </style>

    <!-- Text Styles -->
    <style name="HeadingText">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="SubheadingText">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="BodyText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="CaptionText">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_hint</item>
    </style>

    <!-- Status Badge Styles -->
    <style name="StatusBadge">
        <item name="android:padding">8dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>