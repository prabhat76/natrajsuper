<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Rounded shape appearances for Material3 components -->
    <style name="ShapeAppearance.Natraj.SmallComponent" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>
    <style name="ShapeAppearance.Natraj.MediumComponent" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>
    <style name="ShapeAppearance.Natraj.LargeComponent" parent="ShapeAppearance.Material3.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
    </style>

    <!-- AppCompat Button default -->
    <style name="Widget.Natraj.AppButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/bg_button_rounded</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- MaterialButton default -->
    <style name="Widget.Natraj.MaterialButton" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/primary</item>
        <item name="iconTint">@color/white</item>
        <item name="rippleColor">@color/accent</item>
        <item name="cornerRadius">24dp</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>
