<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    android:background="@color/white"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">

        <!-- Product Image Container -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginBottom="8dp"
            android:background="#F8F8F8">

            <ImageView
                android:id="@+id/product_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:padding="8dp"
                tools:src="@drawable/ic_launcher_background" />

            <!-- NEW Badge -->
            <TextView
                android:id="@+id/new_badge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|start"
                android:layout_margin="8dp"
                android:background="@drawable/bg_badge_new"
                android:paddingHorizontal="10dp"
                android:paddingVertical="4dp"
                android:text="NEW"
                android:textSize="10sp"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:visibility="gone"
                tools:visibility="visible" />

            <!-- Discount Badge -->
            <TextView
                android:id="@+id/discount_badge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|end"
                android:layout_margin="8dp"
                android:background="@drawable/bg_badge_discount"
                android:paddingHorizontal="10dp"
                android:paddingVertical="4dp"
                android:text="-29%"
                android:textSize="11sp"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:visibility="gone"
                tools:visibility="visible" />

            <!-- Wishlist Icon -->
            <ImageView
                android:id="@+id/wishlist_icon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="bottom|end"
                android:layout_margin="8dp"
                android:padding="6dp"
                android:background="@drawable/circle_white_bg"
                android:src="@drawable/ic_favorite"
                android:tint="#757575" />
        </FrameLayout>

        <!-- Product Info Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp"
            android:paddingTop="0dp">

            <!-- Product Name -->
            <TextView
                android:id="@+id/product_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="AS-580CI Agriculture Sprayer"
                android:textSize="14sp"
                android:textColor="#212121"
                android:maxLines="2"
                android:minLines="2"
                android:ellipsize="end"
                android:lineSpacingExtra="2dp"
                android:textStyle="bold"
                android:layout_marginBottom="6dp"
                tools:text="AS-580CI Agriculture Sprayer HTP Pump" />

            <!-- Rating Section -->
            <LinearLayout
                android:id="@+id/rating_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp"
                android:background="@drawable/bg_rating_badge"
                android:paddingHorizontal="8dp"
                android:paddingVertical="3dp"
                android:visibility="visible">

                <TextView
                    android:id="@+id/rating_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5.0"
                    android:textSize="11sp"
                    android:textColor="@android:color/white"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="★"
                    android:textSize="10sp"
                    android:layout_marginStart="2dp"
                    android:textColor="@android:color/white" />
            </LinearLayout>

            <!-- Stock Status -->
            <TextView
                android:id="@+id/stock_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="In stock"
                android:textSize="11sp"
                android:textColor="@color/stock_green"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"
                android:visibility="visible" />

            <!-- Price Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="10dp">

                <!-- Current Price -->
                <TextView
                    android:id="@+id/current_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₹9,099.00"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#212121"
                    android:layout_marginBottom="4dp"
                    tools:text="₹9,099.00" />

                <!-- Original Price and Discount -->
                <LinearLayout
                    android:id="@+id/discount_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/original_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="₹12,738.00"
                        android:textSize="13sp"
                        android:textColor="#757575"
                        android:layout_marginEnd="8dp"
                        tools:text="Original price: ₹12,738.00" />

                    <TextView
                        android:id="@+id/discount_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="29% OFF"
                        android:textSize="12sp"
                        android:textColor="@color/agricultural_green"
                        android:textStyle="bold"
                        tools:text="29% OFF" />
                </LinearLayout>
            </LinearLayout>

            <!-- Add to Cart Button -->
            <Button
                android:id="@+id/add_to_cart_button"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="ADD TO CART"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:background="@drawable/bg_button_add_to_cart"
                android:letterSpacing="0.05"
                android:elevation="2dp" />

        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>