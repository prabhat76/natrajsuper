<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_small"
    app:cardCornerRadius="@dimen/product_card_corner_radius"
    app:cardElevation="@dimen/product_card_elevation"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/padding_medium"
        android:background="@color/white">

        <!-- Product Image Container -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/product_image_height"
            android:layout_marginBottom="@dimen/margin_small">

            <ImageView
                android:id="@+id/product_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:background="#F5F5F5"
                android:src="@drawable/ic_launcher_background" />

            <!-- Wishlist Icon -->
            <ImageView
                android:id="@+id/wishlist_icon"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_gravity="top|end"
                android:layout_margin="@dimen/margin_small"
                android:padding="4dp"
                android:background="@drawable/circle_white_bg"
                android:src="@drawable/ic_favorite"
                android:tint="@color/text_secondary" />

            <!-- Discount Badge -->
            <TextView
                android:id="@+id/discount_percent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|start"
                android:layout_margin="@dimen/margin_small"
                android:background="@color/rating_green"
                android:paddingHorizontal="@dimen/padding_small"
                android:paddingVertical="3dp"
                android:text="20% off"
                android:textSize="@dimen/text_size_small"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:visibility="gone" />
        </FrameLayout>

        <!-- Product Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Product Name -->
            <TextView
                android:id="@+id/product_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Natraj Super Tractor"
                android:textSize="@dimen/text_size_medium"
                android:textColor="@color/text_primary"
                android:maxLines="2"
                android:ellipsize="end"
                android:lineSpacingExtra="1dp"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="4dp" />

            <!-- Rating -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="6dp"
                android:background="@color/rating_green"
                android:paddingHorizontal="6dp"
                android:paddingVertical="2dp"
                android:minHeight="18dp">

                <TextView
                    android:id="@+id/rating_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.5"
                    android:textSize="10sp"
                    android:textColor="@android:color/white"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="★"
                    android:textSize="9sp"
                    android:layout_marginStart="2dp"
                    android:textColor="@android:color/white" />
            </LinearLayout>

            <!-- Price Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/current_price"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="₹12,000"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:fontFamily="sans-serif-medium" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="2dp">

                    <TextView
                        android:id="@+id/original_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="₹15,000"
                        android:textSize="11sp"
                        android:textColor="@color/text_secondary"
                        android:layout_marginEnd="6dp" />

                    <TextView
                        android:id="@+id/discount_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="20% off"
                        android:textSize="11sp"
                        android:textColor="@color/rating_green"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <!-- Delivery Info -->
            <TextView
                android:id="@+id/delivery_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Free delivery"
                android:textSize="11sp"
                android:textColor="@color/text_secondary"
                android:drawableStart="@drawable/ic_delivery"
                android:drawablePadding="4dp"
                android:gravity="center_vertical" />

        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>