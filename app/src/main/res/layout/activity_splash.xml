<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_festive_gradient">

    <!-- Main Content Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp">

        <!-- Logo/Brand Area -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <!-- Logo Container with White Background and Shadow -->
            <androidx.cardview.widget.CardView
                android:id="@+id/logo_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="12dp"
                app:cardCornerRadius="24dp"
                app:cardBackgroundColor="@color/white"
                app:cardElevation="12dp">

                <!-- App Logo -->
                <ImageView
                    android:id="@+id/logo_image"
                    android:layout_width="240dp"
                    android:layout_height="240dp"
                    android:padding="20dp"
                    android:src="@drawable/natraj_logo_official"
                    android:scaleType="fitCenter"
                    android:contentDescription="Natraj Super Logo" />
            </androidx.cardview.widget.CardView>

            <!-- Brand Name -->
            <TextView
                android:id="@+id/brand_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="NATRAJ SUPER"
                android:textColor="@color/white"
                android:textSize="32sp"
                android:textStyle="bold"
                android:letterSpacing="0.1"
                android:shadowColor="@color/black"
                android:shadowRadius="6"
                android:shadowDx="2"
                android:shadowDy="2" />

            <!-- Subtitle -->
            <TextView
                android:id="@+id/subtitle_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="A SIGN OF TRUST"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="italic"
                android:letterSpacing="0.15"
                android:alpha="0.9"
                android:shadowColor="@color/black"
                android:shadowRadius="4"
                android:shadowDx="2"
                android:shadowDy="2" />
        </LinearLayout>

        <!-- Spacer -->
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!-- Loading Indicator -->
        <LinearLayout
            android:id="@+id/loading_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="32dp">

            <ProgressBar
                android:id="@+id/progress_bar"
                style="?android:attr/progressBarStyle"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:indeterminateTint="@color/white" />

            <TextView
                android:id="@+id/loading_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Loading..."
                android:textColor="@color/white"
                android:textSize="14sp"
                android:alpha="0.8" />
        </LinearLayout>
    </LinearLayout>

    <!-- Version Info at Bottom -->
    <TextView
        android:id="@+id/version_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:text="Version 1.0"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:alpha="0.7" />

</RelativeLayout>