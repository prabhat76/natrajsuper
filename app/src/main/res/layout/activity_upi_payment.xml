<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    android:padding="16dp">

    <TextView
        android:id="@+id/upi_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scan QR Code to Pay"
        android:textColor="@color/text_primary"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="32dp" />

    <TextView
        android:id="@+id/upi_amount_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Amount:"
        android:textColor="@color/text_secondary"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/upi_title"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/upi_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="â‚¹0"
        android:textColor="@color/primary"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/upi_amount_label"
        android:layout_marginTop="8dp" />

    <ImageView
        android:id="@+id/upi_qr_code"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/bg_white_rounded"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/upi_amount" />

    <TextView
        android:id="@+id/upi_instructions"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Scan this QR code using any UPI app (Google Pay, PhonePe, Paytm, etc.) to complete your payment."
        android:textColor="@color/text_secondary"
        android:textSize="14sp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/upi_qr_code"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/upi_pay_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Payment Completed"
        android:textColor="@color/white"
        android:background="@drawable/bg_primary_button"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/upi_instructions"
        app:layout_constraintWidth_percent="0.8" />

    <Button
        android:id="@+id/upi_cancel_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:textColor="@color/text_primary"
        android:background="@drawable/bg_white_button"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/upi_pay_button"
        app:layout_constraintWidth_percent="0.8" />

</androidx.constraintlayout.widget.ConstraintLayout>
