<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Status Filter -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order Status"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <RadioGroup
            android:id="@+id/filter_status_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <RadioButton
                android:id="@+id/filter_status_any"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="All Orders"
                android:checked="true" />

            <RadioButton
                android:id="@+id/filter_status_pending"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pending" />

            <RadioButton
                android:id="@+id/filter_status_processing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Processing" />

            <RadioButton
                android:id="@+id/filter_status_completed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Completed" />

            <RadioButton
                android:id="@+id/filter_status_cancelled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancelled" />
        </RadioGroup>

        <!-- Date Filter -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order Date"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <RadioGroup
            android:id="@+id/filter_date_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/filter_date_any"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="All Time"
                android:checked="true" />

            <RadioButton
                android:id="@+id/filter_date_7_days"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Last 7 Days" />

            <RadioButton
                android:id="@+id/filter_date_30_days"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Last 30 Days" />

            <RadioButton
                android:id="@+id/filter_date_3_months"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Last 3 Months" />
        </RadioGroup>

    </LinearLayout>

</ScrollView>