<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="24dp">

        <!-- Success Icon -->
        <TextView
            android:id="@+id/confirmation_success_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="âœ“"
            android:textSize="80sp"
            android:textColor="@color/success"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/confirmation_success_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Order Placed Successfully!"
            android:textColor="@color/text_primary"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center" />

        <TextView
            android:id="@+id/confirmation_success_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Thank you for your order"
            android:textColor="@color/text_secondary"
            android:textSize="16sp"
            android:gravity="center" />

        <!-- Order Details Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            xmlns:app="http://schemas.android.com/apk/res-auto">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ORDER DETAILS"
                    android:textColor="@color/text_primary"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.05" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginVertical="12dp"
                    android:background="#E0E0E0" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="4dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Order ID"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/confirmation_order_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="#12345678"
                        android:textColor="@color/text_primary"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="4dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Order Date"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/confirmation_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="14 Oct 2025, 10:30 AM"
                        android:textColor="@color/text_primary"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="4dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Delivery Address"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/confirmation_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Address"
                        android:textColor="@color/text_primary"
                        android:textSize="14sp"
                        android:maxLines="2"
                        android:ellipsize="end" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="4dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Payment Method"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/confirmation_payment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cash on Delivery"
                        android:textColor="@color/text_primary"
                        android:textSize="14sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginVertical="12dp"
                    android:background="#E0E0E0" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Total Amount"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/confirmation_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â‚¹45,000"
                        android:textColor="@color/success"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Tracking Section -->
        <LinearLayout
            android:id="@+id/confirmation_tracking_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="vertical"
            android:background="@drawable/bg_rounded_white"
            android:padding="16dp"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DELIVERY TRACKING"
                android:textColor="@color/text_primary"
                android:textSize="13sp"
                android:textStyle="bold"
                android:letterSpacing="0.05" />

            <TextView
                android:id="@+id/confirmation_tracking_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Tracking Number: DELXXXX\nProvider: Delhivery"
                android:textColor="@color/text_secondary"
                android:textSize="14sp" />

            <Button
                android:id="@+id/confirmation_track_btn"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/bg_button_outline"
                android:text="TRACK PACKAGE"
                android:textColor="@color/primary"
                android:textSize="14sp"
                android:textStyle="bold"
                android:visibility="gone" />
        </LinearLayout>

        <!-- Buttons -->
        <Button
            android:id="@+id/confirmation_refresh_status_btn"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/bg_button_outline"
            android:text="REFRESH ORDER STATUS"
            android:textColor="@color/primary"
            android:textSize="15sp"
            android:textStyle="bold"
            android:letterSpacing="0.05"
            android:visibility="gone" />
        
        <Button
            android:id="@+id/confirmation_cancel_order_btn"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/bg_button_outline"
            android:text="CANCEL ORDER"
            android:textColor="#D32F2F"
            android:textSize="15sp"
            android:textStyle="bold"
            android:letterSpacing="0.05"
            android:visibility="gone" />
        
        <Button
            android:id="@+id/confirmation_view_orders_btn"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/bg_button_primary"
            android:text="VIEW MY ORDERS"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold"
            android:letterSpacing="0.05" />

        <Button
            android:id="@+id/confirmation_continue_shopping_btn"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_button_gradient"
            android:text="ðŸ›’ CONTINUE SHOPPING"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:letterSpacing="0.05"
            android:drawableStart="@drawable/ic_shopping_bag"
            android:drawablePadding="12dp"
            android:elevation="6dp"
            android:stateListAnimator="@animator/button_press_anim" />

    </LinearLayout>

</ScrollView>
