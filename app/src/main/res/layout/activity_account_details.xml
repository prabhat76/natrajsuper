<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_light">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="35dp"
        android:paddingBottom="10dp"
        android:gravity="center_vertical"
        android:elevation="4dp">

        <ImageView
            android:id="@+id/account_back_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_menu_revert"
            android:tint="@color/white"
            android:background="?attr/selectableItemBackgroundBorderless" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:text="Account Details"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />
            
        <Button
            android:id="@+id/sync_from_web_button"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:text="ðŸ”„ Sync"
            android:textSize="12sp"
            android:textColor="@color/primary"
            android:background="@drawable/button_rounded"
            android:backgroundTint="@color/white"
            android:paddingHorizontal="12dp"
            android:minHeight="0dp" />
    </LinearLayout>

    <!-- Progress Bar -->
    <ProgressBar
        android:id="@+id/account_progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:visibility="visible" />

    <!-- Content ScrollView -->
    <ScrollView
        android:id="@+id/account_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Account Info Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Account Information"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="12dp" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp">

                <EditText
                    android:id="@+id/first_name_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="First Name"
                    android:inputType="textPersonName" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp">

                <EditText
                    android:id="@+id/last_name_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Last Name"
                    android:inputType="textPersonName" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email Address"
                android:textSize="12sp"
                android:textColor="@color/text_secondary"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/email_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="24dp" />

            <!-- Billing Address Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Billing Address"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="12dp" />

            <EditText
                android:id="@+id/billing_address_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Address Line 1"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/billing_address_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Address Line 2 (Optional)"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/billing_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="City"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/billing_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="State"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/billing_postcode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Postcode / ZIP"
                android:inputType="number"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/billing_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Phone"
                android:inputType="phone"
                android:layout_marginBottom="24dp" />

            <!-- Shipping Address Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shipping Address"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="8dp" />

            <CheckBox
                android:id="@+id/copy_billing_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Same as billing address"
                android:layout_marginBottom="12dp" />

            <EditText
                android:id="@+id/shipping_address_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Address Line 1"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/shipping_address_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Address Line 2 (Optional)"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/shipping_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="City"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/shipping_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="State"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/shipping_postcode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Postcode / ZIP"
                android:inputType="number"
                android:layout_marginBottom="24dp" />

            <!-- Save Button -->
            <Button
                android:id="@+id/save_account_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ’¾ Save to Website"
                android:textColor="@color/white"
                android:background="@drawable/button_rounded"
                android:backgroundTint="@color/primary"
                android:paddingVertical="14dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:elevation="4dp" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
