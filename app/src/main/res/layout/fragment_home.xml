<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    android:fillViewport="true"
    android:scrollbars="none"
    android:overScrollMode="never">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header with Search and Cart -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/primary"
            android:orientation="vertical"
            android:padding="@dimen/padding_medium"
            android:elevation="4dp">

            <!-- Top Bar -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- Logo/Brand -->
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Natraj Super"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium" />

                <!-- Search Icon -->
                <ImageView
                    android:id="@+id/search_icon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="@dimen/margin_medium"
                    android:src="@drawable/ic_search"
                    android:tint="@color/white"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="4dp" />

                <!-- Cart Icon with Badge -->
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/cart_icon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_cart"
                        android:tint="@color/white"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:padding="4dp" />

                    <TextView
                        android:id="@+id/cart_badge"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_gravity="top|end"
                        android:background="@drawable/bg_discount"
                        android:gravity="center"
                        android:text="3"
                        android:textColor="@color/discount_text"
                        android:textSize="10sp"
                        android:textStyle="bold" />
                </FrameLayout>
            </LinearLayout>

            <!-- Agricultural Equipment Tagline -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_medium"
                android:text="Premium Agricultural Equipment"
                android:textColor="@color/accent_yellow"
                android:textSize="14sp"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:paddingVertical="4dp" />
        </LinearLayout>

        <!-- Search Bar -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            app:cardCornerRadius="2dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="12dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_search"
                    android:layout_marginEnd="12dp" />

                <EditText
                    android:id="@+id/search_bar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:hint="Search for Products, Brands and More"
                    android:textSize="15sp"
                    android:textColorHint="@color/text_hint"
                    android:textColor="@color/text_primary"
                    android:padding="0dp" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@android:drawable/ic_btn_speak_now"
                    android:tint="@color/text_secondary" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Promotional Banner Carousel -->
        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/banner_viewpager"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="16dp" />

        <!-- Categories Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/padding_medium"
            android:background="@color/white"
            android:layout_marginTop="@dimen/margin_small">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Shop by Categories"
                    android:textColor="@color/text_primary"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:drawableStart="@android:drawable/ic_menu_view"
                    android:drawablePadding="8dp" />

                <TextView
                    android:id="@+id/view_all_categories"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View All â†’"
                    android:textColor="@color/primary"
                    android:textSize="@dimen/text_size_medium"
                    android:textStyle="bold"
                    android:background="?attr/selectableItemBackground"
                    android:padding="@dimen/padding_small" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/categories_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_medium"
                android:clipToPadding="false"
                android:paddingHorizontal="@dimen/padding_small"
                android:orientation="horizontal" />
        </LinearLayout>

        <!-- Special Offers Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ðŸŽ† Festival Special Offers"
                    android:textColor="@color/text_primary"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/view_all_offers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View All"
                    android:textColor="@color/primary"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/offers_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal" />
        </LinearLayout>

        <!-- Featured Products Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/padding_medium"
            android:background="@color/white"
            android:layout_marginTop="@dimen/margin_small">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Festival Special Offers"
                    android:textColor="@color/text_primary"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:drawableStart="@android:drawable/btn_star_big_on"
                    android:drawablePadding="8dp" />

                <TextView
                    android:id="@+id/view_all_products"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View All â†’"
                    android:textColor="@color/primary"
                    android:textSize="@dimen/text_size_medium"
                    android:textStyle="bold"
                    android:background="?attr/selectableItemBackground"
                    android:padding="@dimen/padding_small" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/products_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_medium"
                android:clipToPadding="false"
                android:paddingHorizontal="@dimen/padding_small"
                android:orientation="horizontal" />
        </LinearLayout>

        <!-- Recommended Products Section (Grid) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/padding_medium"
            android:background="@color/white"
            android:layout_marginTop="@dimen/margin_small">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Featured Products"
                    android:textColor="@color/text_primary"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:drawableStart="@android:drawable/btn_star_big_on"
                    android:drawablePadding="8dp" />

                <TextView
                    android:id="@+id/view_all_recommended"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View All â†’"
                    android:textColor="@color/primary"
                    android:textSize="@dimen/text_size_medium"
                    android:textStyle="bold"
                    android:background="?attr/selectableItemBackground"
                    android:padding="@dimen/padding_small" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recommended_products_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_medium"
                android:clipToPadding="false"
                android:paddingHorizontal="@dimen/padding_small"
                android:nestedScrollingEnabled="false" />
        </LinearLayout>

        <!-- Blog Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/padding_medium"
            android:background="@color/white"
            android:layout_marginTop="@dimen/margin_small">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Latest Articles"
                    android:textColor="@color/text_primary"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/view_all_blog"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View All â†’"
                    android:textColor="@color/primary"
                    android:textSize="@dimen/text_size_medium"
                    android:textStyle="bold" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/blog_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal"
                android:nestedScrollingEnabled="false" />
        </LinearLayout>

        <!-- Product Catalogue Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:background="@color/primary_color">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:background="@color/primary_color"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="View Full Catalogue\nBrowse All Products"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/view_catalogue_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Open Catalogue"
                    android:textColor="@color/primary_color"
                    android:background="@color/white"
                    android:layout_marginStart="16dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- WhatsApp Order Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:background="@color/success">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:background="@color/success"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Order on WhatsApp\nGet Special Discount!"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/whatsapp_order_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Click to WhatsApp"
                    android:textColor="@color/success"
                    android:background="@color/white"
                    android:layout_marginStart="16dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Footer Space -->
        <View
            android:layout_width="match_parent"
            android:layout_height="16dp" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
