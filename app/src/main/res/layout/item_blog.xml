<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">

        <!-- Blog Image -->
        <ImageView
            android:id="@+id/blog_image"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:scaleType="centerCrop"
            android:background="@color/light_gray" />

        <!-- Content Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <!-- Category Badge -->
            <TextView
                android:id="@+id/blog_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Agriculture"
                android:textColor="@color/primary"
                android:textSize="11sp"
                android:textStyle="bold"
                android:background="@drawable/bg_category_badge"
                android:padding="4dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp" />

            <!-- Blog Title -->
            <TextView
                android:id="@+id/blog_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Blog Title"
                android:textColor="@color/text_primary"
                android:textSize="15sp"
                android:textStyle="bold"
                android:maxLines="2"
                android:ellipsize="end" />

            <!-- Blog Excerpt -->
            <TextView
                android:id="@+id/blog_excerpt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Blog excerpt goes here..."
                android:textColor="@color/text_secondary"
                android:textSize="13sp"
                android:maxLines="2"
                android:ellipsize="end" />

            <!-- Date and Author -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/blog_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="11 OCT 2025"
                    android:textColor="@color/text_hint"
                    android:textSize="11sp"
                    android:drawableStart="@android:drawable/ic_menu_recent_history"
                    android:drawablePadding="4dp"
                    android:drawableTint="@color/text_hint" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Read More â†’"
                    android:textColor="@color/primary"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
