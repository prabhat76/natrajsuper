<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_light">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_festive_gradient"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="35dp"
    android:paddingBottom="8dp"
    android:elevation="4dp">


    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Shop by Categories"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Find the perfect equipment for your needs"
            android:textColor="@color/gold_light"
            android:textSize="14sp"
            android:gravity="center" />
    </LinearLayout>

    <!-- Search Bar -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="25dp"
        app:cardElevation="4dp">

        <EditText
            android:id="@+id/category_search_bar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@android:color/transparent"
            android:drawableStart="@android:drawable/ic_menu_search"
            android:drawablePadding="12dp"
            android:hint="Search categories..."
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textColorHint="@color/text_hint" />
    </androidx.cardview.widget.CardView>

    <!-- Categories Grid -->
<!--    <androidx.recyclerview.widget.RecyclerView-->
<!--        android:id="@+id/categories_grid_recycler"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="match_parent"-->
<!--        android:padding="8dp"-->
<!--        android:clipToPadding="false" />-->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/categories_grid_recycler"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:padding="8dp"
        android:clipToPadding="false" />


</LinearLayout>
