<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="28" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:name=".NatrajApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/natraj_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/natraj_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.Natraj"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">

        <!-- Splash and main activities -->
        <activity
            android:name="com.example.natraj.ui.activities.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.Natraj.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.example.natraj.ui.activities.MainActivity"
            android:exported="false"
            android:theme="@style/Theme.Natraj.NoActionBar" />

        <!-- All products activity -->
        <activity
            android:name="com.example.natraj.ui.activities.AllProductsActivity"
            android:exported="false"
            android:parentActivityName="com.example.natraj.ui.activities.MainActivity" />

        <!-- Category products (belongs to ui.activities) -->
        <activity
            android:name="com.example.natraj.ui.activities.CategoryProductsActivity"
            android:exported="false"
            android:parentActivityName="com.example.natraj.ui.activities.MainActivity" />

        <!-- Product detail is in top-level package com.example.natraj -->
        <activity
            android:name="com.example.natraj.ProductDetailActivity"
            android:exported="false"
            android:parentActivityName="com.example.natraj.ui.activities.AllProductsActivity" />

        <!-- AddressActivity is declared in com.example.natraj -->
        <activity
            android:name="com.example.natraj.AddressActivity"
            android:exported="false"
            android:parentActivityName="com.example.natraj.ui.activities.MainActivity" />

        <!-- PaymentActivity is in top-level package com.example.natraj -->
        <activity
            android:name="com.example.natraj.PaymentActivity"
            android:exported="false"
            android:parentActivityName="com.example.natraj.AddressActivity" />

        <!-- Order confirmation in ui.activities -->
        <activity
            android:name="com.example.natraj.ui.activities.OrderConfirmationActivity"
            android:exported="false"
            android:parentActivityName="com.example.natraj.ui.activities.MainActivity" />

        <!-- Orders (top-level) -->
        <activity
            android:name="com.example.natraj.OrdersActivity"
            android:exported="false"
            android:parentActivityName="com.example.natraj.ui.activities.MainActivity" />

        <!-- Wishlist in ui.activities -->
        <activity
            android:name="com.example.natraj.ui.activities.WishlistActivity"
            android:exported="false"
            android:parentActivityName="com.example.natraj.ui.activities.MainActivity" />

        <!-- Account details in ui.activities -->
        <activity
            android:name="com.example.natraj.ui.activities.AccountDetailsActivity"
            android:exported="false"
            android:parentActivityName="com.example.natraj.ui.activities.MainActivity" />

        <!-- Blog pages are top-level -->
        <activity
            android:name="com.example.natraj.BlogActivity"
            android:exported="false"
            android:parentActivityName="com.example.natraj.ui.activities.MainActivity" />

        <activity
            android:name="com.example.natraj.BlogDetailActivity"
            android:exported="false"
            android:parentActivityName="com.example.natraj.BlogActivity" />

        <!-- Error and failure activities -->
        <activity
            android:name="com.example.natraj.ui.activities.ErrorActivity"
            android:exported="false"
            android:theme="@style/Theme.Natraj.NoActionBar" />

        <activity
            android:name="com.example.natraj.OrderFailureActivity"
            android:exported="false"
            android:theme="@style/Theme.Natraj.NoActionBar" />

        <!-- Quick checkout -->
        <activity
            android:name="com.example.natraj.ui.activities.QuickCheckoutActivity"
            android:exported="false"
            android:parentActivityName="com.example.natraj.ui.activities.MainActivity" />

        <!-- Auth activities (Login in top-level, Signup under ui.activities) -->
        <activity
            android:name="com.example.natraj.LoginActivity"
            android:exported="false"
            android:theme="@style/Theme.Natraj.NoActionBar" />

        <activity
            android:name="com.example.natraj.ui.activities.SignupActivity"
            android:exported="false"
            android:theme="@style/Theme.Natraj.NoActionBar" />

        <!-- Kafka notification service -->
        <service
            android:name="com.example.natraj.util.kafka.KafkaNotificationService"
            android:enabled="true"
            android:exported="false" />

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

    </application>

</manifest>